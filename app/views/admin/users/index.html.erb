<h2>管理画面のユーザー一覧画面</h2>
<p><%= notice %></p>
    <table>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to '詳細ページを表示', admin_user_path(user.id) ,class: user.id %></td>
        <td><%= link_to '情報を編集する', edit_admin_user_path(user.id) %></td>
        <td><%= link_to '情報を削除する', admin_user_path(user.id), method: :delete%></td>
        <td>｜タスク数：<%= user.tasks.count %></td>
        <td><%= button_to 'ロールの付与', admin_users_path, method: :get, name: user.id %></td>
      </tr>
      <% end %>
    </table>
<%= link_to 'ユーザーの新規作成', new_admin_user_path %>
